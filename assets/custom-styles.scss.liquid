// Gift Wizard
.gwbutton {
  width: 100%;
  position: relative;
  margin-top: 15px;
  font-size: 18px;
}

@media (max-width: 767px) {
  #shopify-section-collection-template .container {
  	width: 100%;
  }	
  
  .sixteen.columns.page.clearfix .findify-root{
  	padding: 0;
  }
}

// Capitalize product titles on collection & product pages
.product-details .title,
.seven .columns .omega .product_name {
  text-transform: uppercase;
}

// Trust badges
#trust-badge-content-div p {
 display: none; 
}

#trust-badge-content-div  td {
 padding-top: 0px !important; 
}

